        {
          "id": "step-2",
          "action": "waitAfterNavigation",
          "description": "Wait for navigation"
        },
        {
          "id": "step-3",
          "action": "waitForElement",
          "target": "studentProfileHeader",
          "description": "Verify student profile loads",
          "waitCondition": "visible"
        },
        {
          "id": "step-4",
          "action": "tap",
          "target": "progressTab",
          "description": "Navigate to progress tab"
        },
        {
          "id": "step-5",
          "action": "waitForElement",
          "target": "progressChart",
          "description": "Wait for progress data to load",
