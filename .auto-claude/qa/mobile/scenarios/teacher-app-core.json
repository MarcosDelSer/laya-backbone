          "description": "Student profile screen header"
        },
        "progressTab": {
          "ios": { "strategy": "accessibilityId", "selector": "progressTab" },
          "android": { "strategy": "id", "selector": "com.laya.teacherapp:id/progress_tab" },
          "description": "Progress tab in student profile"
        },
        "progressChart": {
          "ios": { "strategy": "accessibilityId", "selector": "progressChart" },
          "android": { "strategy": "id", "selector": "com.laya.teacherapp:id/progress_chart" },
          "description": "Progress chart/visualization"
        }
      },
      "steps": [
        {
          "id": "step-1",
          "action": "tap",
          "target": "firstStudentItem",
          "description": "Tap on first student"
