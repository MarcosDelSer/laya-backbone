      "category": "student-interaction",
      "priority": "high",
      "tags": ["students", "progress", "analytics", "happy-path"],
      "preconditions": [
        "User is logged in as teacher",
        "Viewing a class with students"
      ],
      "customElements": {
        "firstStudentItem": {
          "ios": { "strategy": "-ios class chain", "selector": "**/XCUIElementTypeCell[`name CONTAINS 'studentItem'`][1]" },
