{
  "$schema": "./scenarios.schema.json",
  "platform": "windows",
  "app": {
    "name": "LAYA Desktop",
    "type": "electron",
    "description": "Windows wrapper for parent-portal (childcare management for parents)"
  },
  "automation": {
    "framework": "winappdriver",
    "port": 4723,
    "capabilities": {
      "app": "LAYA Desktop",
      "deviceName": "WindowsPC",
      "platformName": "Windows"
    }
  },
  "suites": {
    "smoke": {
      "description": "Critical path validation for Windows VM/emulator runs",
      "timeout_seconds": 300,
      "scenarios": [
        {
          "id": "smoke-001",
          "name": "Application Launch",
          "category": "launch",
          "priority": "critical",
          "steps": [
            {
              "action": "launch_app",
              "description": "Launch LAYA Desktop application"
            },
            {
              "action": "wait_for_element",
              "selector": "[data-testid='app-container']",
              "timeout_ms": 10000,
              "description": "Wait for main application container to load"
            },
            {
              "action": "capture_screenshot",
              "name": "app_launched"
            }
          ],
          "expected_outcomes": [
            "Application window opens without crash",
            "Login page or dashboard is displayed",
            "No error dialogs appear"
          ]
        },
        {
          "id": "smoke-002",
          "name": "Login with Valid Credentials",
          "category": "authentication",
          "priority": "critical",
          "preconditions": ["Application is launched", "User is on login page"],
          "steps": [
            {
              "action": "input_text",
              "selector": "[data-testid='email-input']",
              "value": "{{TEST_USER_EMAIL}}",
              "description": "Enter test user email"
            },
            {
              "action": "input_text",
              "selector": "[data-testid='password-input']",
              "value": "{{TEST_USER_PASSWORD}}",
              "description": "Enter test user password"
            },
            {
              "action": "click",
              "selector": "[data-testid='login-button']",
              "description": "Click login button"
            },
            {
              "action": "wait_for_navigation",
              "target": "/dashboard",
              "timeout_ms": 15000,
              "description": "Wait for dashboard redirect"
            },
            {
              "action": "capture_screenshot",
              "name": "login_success"
            }
          ],
          "expected_outcomes": [
            "User is redirected to dashboard",
            "User name or welcome message is displayed",
            "Navigation menu is visible"
          ]
        },
        {
          "id": "smoke-003",
          "name": "View Daily Reports",
