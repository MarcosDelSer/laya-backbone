{
  "name": "laya-desktop",
  "version": "0.1.0",
  "description": "LAYA Desktop Application - Windows wrapper for parent-portal",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "start": "npm run build:ts && electron .",
    "build:ts": "tsc",
    "build": "npm run build:ts && electron-builder --win",
    "dist": "npm run build:ts && electron-builder --win --x64",
    "dist:win": "npm run build:ts && electron-builder --win"
  },
  "dependencies": {
    "electron-updater": "^6.7.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0",
    "typescript": "^5.3.3"
  }
}
