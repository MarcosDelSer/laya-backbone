# LAYA Development Environment Configuration
# Copy this file to .env and update values as needed
#
# SECURITY: Never commit .env to version control!

# ============================================
# MySQL Database (Gibbon CMS)
# ============================================
MYSQL_ROOT_PASSWORD=laya_root_password_change_me
MYSQL_DATABASE=gibbon
MYSQL_USER=gibbon
MYSQL_PASSWORD=gibbon_password_change_me
MYSQL_PORT=3306

# ============================================
# PostgreSQL Database (AI Service)
# ============================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=laya_ai
POSTGRES_USER=laya
POSTGRES_PASSWORD=laya_password_change_me

# ============================================
# Redis (Session Storage & Caching)
# ============================================
REDIS_PORT=6379

# ============================================
# JWT Authentication
# ============================================
# IMPORTANT: Generate a secure secret for production!
# Use: openssl rand -hex 32
JWT_SECRET_KEY=your_jwt_secret_key_change_in_production

# ============================================
# Service Ports
# ============================================
NGINX_PORT=8080
AI_SERVICE_PORT=8000
PARENT_PORTAL_PORT=3000

# ============================================
# Firebase Cloud Messaging (Push Notifications)
# ============================================
# Get these from Firebase Console
# FCM_SERVER_KEY=your_firebase_server_key
# FCM_PROJECT_ID=your_firebase_project_id

# ============================================
# Email Configuration (Notifications)
# ============================================
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=noreply@example.com
# SMTP_PASSWORD=your_smtp_password
# SMTP_FROM_ADDRESS=noreply@laya.ca
# SMTP_FROM_NAME=LAYA Childcare

# ============================================
# Gibbon CMS Configuration
# ============================================
GIBBON_ABSOLUTE_URL=http://localhost:8080/gibbon
GIBBON_TIMEZONE=America/Toronto
GIBBON_LOCALE=en_GB

# Gibbon Administrator Account (for automatic installation)
# IMPORTANT: Change these in production!
GIBBON_ADMIN_USERNAME=admin
GIBBON_ADMIN_PASSWORD=laya_admin_password_change_me
GIBBON_ADMIN_EMAIL=admin@laya.local
GIBBON_ADMIN_FIRSTNAME=System
GIBBON_ADMIN_SURNAME=Administrator
GIBBON_ORG_NAME=LAYA Childcare
# Optional: Set a fixed GUID (auto-generated if empty)
# GIBBON_GUID=

# ============================================
# AI Service Configuration
# ============================================
AI_LOG_LEVEL=INFO
AI_DEBUG_MODE=true

# ============================================
# Environment
# ============================================
# Options: development, staging, production
ENVIRONMENT=development
