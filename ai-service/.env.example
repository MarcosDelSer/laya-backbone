# LAYA AI Service Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=laya_ai
POSTGRES_USER=laya
POSTGRES_PASSWORD=your_postgres_password_here

# =============================================================================
# JWT CONFIGURATION
# =============================================================================

JWT_SECRET_KEY=your_jwt_secret_key_change_in_production
JWT_ALGORITHM=HS256

# =============================================================================
# LLM PROVIDER API KEYS
# =============================================================================
# At least one API key is required for LLM functionality

# OpenAI API key for GPT models (gpt-4o, gpt-4-turbo, gpt-3.5-turbo)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API key for Claude models (claude-3-opus, claude-3-sonnet, claude-3-haiku)
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# =============================================================================
# LLM CONFIGURATION
# =============================================================================

# Default LLM provider: "openai" or "anthropic"
LLM_DEFAULT_PROVIDER=openai

# Default model for completions
# OpenAI: gpt-4o, gpt-4-turbo, gpt-3.5-turbo
# Anthropic: claude-3-opus-20240229, claude-3-sonnet-20240229, claude-3-haiku-20240307
LLM_DEFAULT_MODEL=gpt-4o

# Temperature for LLM responses (0.0 = deterministic, 2.0 = creative)
LLM_TEMPERATURE=0.7

# Maximum tokens for LLM responses
LLM_MAX_TOKENS=4096

# Timeout in seconds for LLM API calls
LLM_TIMEOUT=60
