# LAYA AI Service - Environment Configuration Example
# Copy this file to .env and update with your values

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=laya_ai
POSTGRES_USER=laya
POSTGRES_PASSWORD=laya_password

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_change_in_production
JWT_ALGORITHM=HS256

# Database Connection Pool Configuration
# Adjust these based on your application load and infrastructure

# Number of permanent connections in the pool
# Recommendation: Start with 10, adjust based on concurrent request load
DB_POOL_SIZE=10

# Maximum overflow connections beyond pool_size
# Recommendation: Set to 2x pool_size for burst traffic handling
DB_MAX_OVERFLOW=20

# Timeout (seconds) for acquiring a connection from the pool
# Recommendation: 30s for API services, 60-120s for background jobs
DB_POOL_TIMEOUT=30

# Recycle connections after N seconds to prevent stale connections
# Recommendation: 3600s (1 hour) - prevents long-lived connection issues
DB_POOL_RECYCLE=3600

# Test connection health before use
# Recommendation: Always true in production
DB_POOL_PRE_PING=true

# Enable SQL query logging
# Recommendation: true in development, false in production
DB_ECHO=false

# Environment-Specific Examples:
#
# Development:
#   DB_POOL_SIZE=3
#   DB_MAX_OVERFLOW=5
#   DB_ECHO=true
#
# Small Production (< 100 req/min):
#   DB_POOL_SIZE=5
#   DB_MAX_OVERFLOW=10
#   DB_ECHO=false
#
# Medium Production (100-1000 req/min):
#   DB_POOL_SIZE=15
#   DB_MAX_OVERFLOW=30
#   DB_ECHO=false
#
# Large Production (> 1000 req/min):
#   DB_POOL_SIZE=30
#   DB_MAX_OVERFLOW=60
#   DB_POOL_TIMEOUT=20
#   DB_ECHO=false
